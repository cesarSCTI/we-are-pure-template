<!-- Link Swiper's CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<style>
.swiper {
width: 100%;
height: 100%;
}

.swiper-slide {
text-align: center;
font-size: 18px;
background: #fff;
display: flex;
justify-content: center;
align-items: center;
min-height: 80vh;
}

.swiper-slide img {
display: block;
height: 70vh;
    width: auto;
}

.swiper {
margin-left: auto;
margin-right: auto;
}
.contenedor-slider {
display: flex;
align-items: center;
width: 100%;
margin-bottom: 150px;
}
.slider-text {
display: flex;
flex-direction: column;
align-items: center;
justify-content: center;
gap: 15px;
width: 50%;
padding:7%;
}
.slider-text h3{
    font-weight:800;
}
.slider-image {
    width: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow:hidden;
}
.container-info{
    display:flex;
    justify-content:center;
    align-items:flex-start;
    flex-wrap:wrap;
    gap:30px;
}
a.item-button {
    background: #E94760;
    color: #fff;
    width: 50%;
    padding: 2% 5%;
    border-radius: 5px;
    transition:.8s;
    cursor:pointer;
}
a.item-button:hover{
    opacity:0.8;
}
.item-info p{
    margin:0px;
}
.swiper-pagination-clickable .swiper-pagination-bullet {
    cursor: pointer;
    background: transparent !important;
}
.swiper-pagination {
display: flex;
justify-content:center;
gap: 100px;
height: 90px;
margin-bottom: 50px;
}
/*Tabs*/
.tabs {
margin-top:50px;
display: flex;
gap: 10px;
margin-bottom: 20px;
justify-content:center;
}

.tab-link {
padding: 10px 15px;
cursor: pointer;
background-color: #f0f0f0;
border: 1px solid #ddd;
border-radius: 5px;
}

.tab-link.active {
background-color: #ddd;
}

.tab-content {
padding: 0px;
border-radius: 5px;
overflow:hidden;
}

.tab-pane {
display: none;
}

.tab-pane.active {
display: block;
} 
.contenedor-slider {
display: flex;
align-items: center;
width: 100%;
margin-bottom: 150px;
}
@media only screen and (max-width:768px){
.contenedor-slider {
    flex-direction:column;
}
.slider-image {
    width: 100%;
    order:1;
}
.slider-text{
    width:100%;
    order:2;
}
.swiper-pagination.swiper-pagination-clickable.swiper-pagination-bullets.swiper-pagination-horizontal {
    overflow-x: scroll;
}
}
</style>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>


<div class="tabs">
    <button class="tab-link active" data-tab="tab1">
        {% if section.settings.tab1 != blank %}
            {{ section.settings.tab1 | image_url: height: 100 | image_tag }}
        {% else %}
            Tab 1
        {% endif %}
    </button>
    <button class="tab-link" data-tab="tab2">
        {% if section.settings.tab2 != blank %}
            {{ section.settings.tab2 | image_url: height: 100 | image_tag }}
        {% else %}
            Tab 1
        {% endif %}
    </button>
</div>

<div class="tab-content">
<div id="tab1" class="tab-pane active">
    {% render 'slider-bolsa' %}
</div>
<div id="tab2" class="tab-pane">
    {% render 'slider-lata' %}
</div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$(document).ready(function() {
    $(".tab-link").click(function() {
    var tabID = $(this).data("tab");
    // Cambiar la clase activa en el bot√≥n tab
    $(".tab-link").removeClass("active");
    $(this).addClass("active");
    // Cambiar la clase activa en el contenido del tab
    $(".tab-pane").removeClass("active");
    $("#" + tabID).addClass("active");
    });
});
</script>

