{%- unless heading == blank and subheading == blank and button == blank -%}

  <div class="section-heading {{ layout }} gutter-bottom--page">
    
    {%- unless heading == blank and subheading == blank -%}

      <div class="section-heading__text remove-empty-space">

        {%- unless heading == blank -%}
          <div class="title-custom-left">
            {%- unless img_left == blank -%}
            {% if img_left != blank %}
              {{ img_left | image_url: width:50 | image_tag }}
            {% endif %}
            {% endunless %}
            <{{ heading_tag }} class="section-heading__title h4">{{ heading | escape }}</{{ heading_tag }}>
            {%- unless img_right == blank -%}
          {% if img_right != blank %}
            {{ img_right | image_url: width:50 | image_tag }}
          {% else %}
            <img src="//we-are-pure-shop.myshopify.com/cdn/shop/files/titulo-derecha.png?v=1731633182&amp;width=50" alt="" srcset="//we-are-pure-shop.myshopify.com/cdn/shop/files/titulo-derecha.png?v=1731633182&amp;width=50 50w" width="50" height="59">
          {% endif %}
          {%- endunless%}
        </div>
        {%- endunless -%}

        {%- unless subheading == blank -%}
          <span class="section-heading__subheading text-size--large">{{ subheading }}</span>
        {%- endunless -%}

      </div>

    {%- endunless -%}
    
    {%- unless button == blank or layout contains 'center' -%}

      <div class="section-heading__actions">
        {%- if button -%}
          <a class="text-size--large text-link" href="{{ link }}">{{ button_label | t }}</a>
        {%- endif -%}
      </div>

    {%- endunless -%}
  
  </div>

{%- endunless -%}